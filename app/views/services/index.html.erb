<%= link_to 'New Service', new_service_path, class:"btn btn-primary float-right" %>

<h3 class="text-center">Services</h3>

<table>
  <thead>
    <tr>
      <th>Service name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service_name %></td>
   
        <td><%= link_to 'Update', edit_service_path(service) %></td>
        <td><%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


