              <span class="notice text-center", id="notice"><%= notice %></span>
              <span class="alert text-center", id="alert"><%= alert %></span>
	    <%= form_for(resource, :html => {:id => 'login-form-validation', :class=>"login-form"}, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, :class=>"required" %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :password, :class=>"required" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

          <div class="form-check">
            <% if devise_mapping.rememberable? %>
              <div class="field checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
          <div class="text-center">
            <%= f.submit "Log In", :class=>'button small' %>
          </div>
      <% end %>
